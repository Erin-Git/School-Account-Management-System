


@model List<SchoolManagementSystem.Areas.Admin.AdminVM.SubjectViewModel>


<div class="container">
    <p class="h2" style="text-align:center;">Subject List<br /><div style="border-bottom:1px solid #686868"></div> </p>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="h3">
                    Serial No
                </th>
                <th class=" h3 ">
                     Subject Name
                </th>
                <th class=" h3  ">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var item in Model)
            {
                <tr>
                    <td class=" h4  ">@item.sbjctidVM</td>
                    
                    <td class=" h4  ">@item.sbjcttitleVM</td>
                    <td class=" h4  ">
                        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;<a asp-action="UpdateSubject" asp-controller="Home" asp-area="Admin" asp-route-id="@item.sbjctidVM"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>