
@{
    Layout = "_LayoutAdmin";
}

@model List<SchoolManagementSystem.Areas.Admin.AdminVM.RoleViewModel>


<div class="container">
    <p class="h2" style="text-align:center;">Role List<br /><div style="border-bottom:    1px solid #686868"></div> </p>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="h3">
                    Serial
                </th>
                <th class=" h3 ">
                    Role Type
                </th>
                <th class=" h3  ">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td  class=" h4  ">@item.roleidVM</td>
                    <td class=" h4  ">@item.roletypeVM</td>
                    <td class=" h4  "><a asp-action="UpdateRole" asp-controller="Home" asp-area="Admin" asp-route-u="@item.roleidVM" ><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>