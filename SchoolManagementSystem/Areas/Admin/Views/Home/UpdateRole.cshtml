@{
    Layout = "_LayoutAdmin";
}
@model SchoolManagementSystem.Areas.Admin.AdminVM.RoleViewModel



<div class="row" style="margin-top:15%">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-12 jumbotron" style="background-color:lightgray;box-shadow:0 5px 15px #686868">


        <form asp-area="Admin" asp-action="UpdateRole" asp-controller="Home" method="post">
            <div class="form-group">
                <input asp-for="roleidVM" type="hidden" />
                <label asp-for="roletypeVM" class="h3"></label>
                <input asp-for="roletypeVM" class="form-control" />
                <span asp-validation-for="roletypeVM"></span>
            </div>
            <div class="form-group ">
                <input type="submit" class="btn btn-success " value="Update" />
            </div>
        </form>
    </div>


</div>


