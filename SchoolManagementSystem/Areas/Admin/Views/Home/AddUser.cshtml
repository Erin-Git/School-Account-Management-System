@{
    Layout = "_LayoutAdmin";
}
@model SchoolManagementSystem.Areas.Admin.Models.Role

<div class=" row">
    <div class="col-md-4 col-md-offset-4">
        <h1  style="text-align:center">Add Role</h1>
        <a asp-area="Admin" asp-action="AddUser" asp-controller="Home" class="h2 btn btn-success animated  fadeInLeft  " style="text-align:center">Role List</a>
        <div class="row">
            <div class="row">
                <div class="col s12">


                </div>
            </div>
            <form class="col s12" asp-action="AddRole" asp-controller="Home" asp-area="Admin">



                <div class="row">
                    <div class="input-field col s12 animated  fadeInLeft">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">

                        <div class="input-field right">
                            <input type="submit" class="btn btn-success animated  fadeInRight " value="Add">

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
