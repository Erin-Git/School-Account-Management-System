
@model List<SchoolManagementSystem.Areas.Admin.AdminVM.ClassViewModel>


<div class="container">
    <p class="h2" style="text-align:center;">Class List<br /><div style="border-bottom:    1px solid #686868"></div> </p>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="h3">
                    Serial
                </th>
                <th class=" h3 ">
                    Class Name
                </th>
                <th class=" h3  ">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class=" h4  ">@item.clsidVM</td>
                    <td class=" h4  ">@item.clsnameVM</td>
                    <td class=" h4  "><a asp-action="UpdateClass" asp-controller="Home" asp-area="Admin" asp-route-u="@item.clsidVM"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>