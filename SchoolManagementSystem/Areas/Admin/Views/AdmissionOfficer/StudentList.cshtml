


@model List<SchoolManagementSystem.Areas.Admin.AdminVM.StudentViewModel>


<div class="container">
    <p class="h2" style="text-align:center;">Student List<br /><div style="border-bottom:    1px solid #686868"></div> </p>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th class="h3">
                    Serial
                </th>
                <th class=" h3 ">
                    Photo
                </th>
                <th class=" h3  ">
                    ID
                </th>
                <th class=" h3  ">
                    Name
                </th>
                <th class=" h3  ">
                    Class
                </th>
                <th class=" h3  ">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class=" h4  ">@item.Serial</td>
                    <td class=" h4  "><img style="width:100px;height:100px" src="~/images/ruthson-zimmerman-233522-unsplash.jpg" /></td>
                    <td class=" h4  ">@item.stdntidVM</td>
                    <td class=" h4  ">@item.stdntnameVM</td>
                    <td class=" h4  ">@item.stdntclsVM</td>
                    <td class=" h4  ">
                        <a asp-action="UpdateStudent" asp-controller="AdmissionOfficer" asp-area="Admin" asp-route-id="@item.stdntidVM"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                        &nbsp;&nbsp;&nbsp;
                        <a asp-action="Details" asp-controller="AdmissionOfficer" asp-area="Admin" asp-route-id="@item.stdntidVM"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>