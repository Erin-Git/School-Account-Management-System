@model SchoolManagementSystem.Areas.Accounts.ViewModels.FeeSubViewModel

<form style="margin-top:20px;padding:20px;background-color:ghostwhite; box-shadow:0 5px 15px #686868;border-radius:10px 15px;" asp-area="Accounts" asp-controller="Accounts" asp-action="EnterStdntInfo" method="post">
    <h1 style="text-align:center;font-family:'Century Gothic';font-weight:bold;">Fee Submission</h1>
    <hr style="width:70%;" />

    <div class="row" style="padding:10px;">
        @*row 1*@

        <div class="col-xs-12 col-sm-12 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1">
            <div class="form-group">
                <label>Enter Student's ID:</label>
                <input type="number" class="form-control" placeholder="Student's ID" asp-for="studentidVM" />
                @*@ViewBag.msg2
                @ViewBag.msg3*@
                <span class="text-danger field-validation-valid" asp-validation-for="studentidVM"></span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="form-group">
                <label>Select Class:</label>
                <select asp-for="classidVM" asp-items="@(new SelectList(ViewBag.vc,"ClassId","ClassName"))" class="form-control"></select>
                @*@ViewBag.msg1*@
                <span class="text-danger field-validation-valid" asp-validation-for="classidVM"></span>

            </div>
           
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <div class="form-group">
                <label>Select Month:</label>
                <input asp-for="dateVM" id="date" class="form-control" type="date" />
                <span class="text-danger field-validation-valid" asp-validation-for="dateVM"></span>
            </div>
        </div>
    </div>
    <div class="row" style="padding:10px;">
        @*row 2*@
        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2" style="float:right;">
            <button class="btn btn-primary" type="submit" style="float:right;">Submit</button>
        </div>
    </div>
</form>




