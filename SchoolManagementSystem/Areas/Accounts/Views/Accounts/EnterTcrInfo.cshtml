@model SchoolManagementSystem.Areas.Accounts.ViewModels.SalaryDetailsViewModel



    <form style="margin-top:20px;padding:20px;background-color:ghostwhite; box-shadow:0 5px 15px #686868;border-radius:10px 15px;"asp-area="Accounts"asp-controller="Accounts" asp-action="EnterTcrInfo"method="post">
        <h1 style="text-align:center;font-family:'Century Gothic';font-weight:bold;">Teacher's Salary</h1>
        <hr style="width:70%;" />

        <div class="row" style="padding:10px;">
            @*row 1*@
            <div class="col-xs-12 col-sm-12 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                <div class="form-group">
                    <label for="exmtype">Select Teacher's Name:</label>
                    <select class="form-control" asp-for="teacheridVM" asp-items="@(new SelectList(ViewBag.vt,"TeacherId","TeacherName"))"></select>
                    @*<input type="hidden" asp-for="desigidVM" />*@
                    <span class="text-danger field-validation-valid" asp-validation-for="teacheridVM"></span>
                    @ViewBag.msg1
                    @ViewBag.msg2
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Select Month:</label>
                    <input asp-for="dateVM" class="form-control" type="date" />
                    <span class="text-danger field-validation-valid" asp-validation-for="dateVM"></span>
                </div>
            </div>
        </div>
        <div class="row" style="padding:10px;">
            @*row 2*@
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2" style="float:right;">
                <button class="btn btn-primary" type="submit" style="float:right;">Submit</button>
            </div>
        </div>
    </form>
