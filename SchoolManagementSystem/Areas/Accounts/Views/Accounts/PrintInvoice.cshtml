@model SchoolManagementSystem.Areas.Accounts.ViewModels.FeeSubViewModel

<div class="container">
    <div class="row" style="background-color:ghostwhite;padding:10px;width:90%;margin-left:15px;">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="invoice-title">
                <h2 class="text-center"><strong>INVOICE</strong></h2>
            </div>
            <hr />
            <div class="row"style="padding-bottom:15px;">
                <div class="col-xs-5 col-xs-offset-1 col-sm-4 col-sm-offset-2 col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
                    <address>
                        <strong>BFCS High School</strong>
                        <br />
                        Street Park Lane
                        <br />
                        Sector- 4, Block- 8
                        <br />
                        Bangladesh
                    </address>
                </div>
                <div class="col-xs-5 col-sm-4 col-md-4 col-lg-4 text-right">
                    <address>
                        <strong>Phone: </strong>  01236745252
                        <br />
                        <strong>Mobile: </strong> 12036578964
                        <br />
                        <strong>E-mail: </strong> bfcs@bfcs.edu
                        <br />
                        INV# 1
                        <br />
                        <strong>Date: </strong>@Model.dt
                    </address>
                </div>
            </div>
            <hr />
        </div>
        <div class="row">
            <div class="text-center"style="padding-bottom:30px;">
                <h5><strong>Student's Name: </strong>@Model.studentnameVM</h5>
                <h5><strong>Student ID: </strong> @Model.studentidVM</h5>
                <h5><strong>Class: </strong> @Model.classnameVM</h5>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>Fee Description</th>
                            <th>Amount (BDT)</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            <tr>
                                <td>Class Fee</td>
                                <td>@Model.feeamountVM</td>
                            </tr>
                      

                        @if (Model.extrafeeamountVM != 0)
                        {
                            <tr>
                                <td>Extra Fee</td>
                                <td>@Model.extrafeeamountVM</td>
                            </tr>
                        }

                        @*@if (Model.amountofmonth != 1)*@
                        @if (Model.amountofmonth > 1)
                        {
                            <tr>
                                <td>Month(@Model.lastmonth - @Model.currentmonth)</td>
                                @{
                                    var y = Model.amountofmonth * Model.feeamountVM;
                                }
                                <td>@y</td>
                            </tr>
                        }
                        else if (Model.amountofmonth == 1)

                        {
                            <tr>
                                <td>Month(@Model.currentmonth)</td>
                                @{
                                    var y = Model.amountofmonth * Model.feeamountVM;
                                }
                                <td>@y</td>

                            </tr>
                        }

                        <tr>
                            <td>Paid Amount</td>
                            <td>@Model.totalfeeVM</td>
                        </tr>

                        @if (Model.dueamountVM != 0)
                        {
                            <tr>
                                <td>Due Amount</td>
                                <td>@Model.dueamountVM</td>
                            </tr>}
                    </tbody>
                   
                </table>
                <p style="font-style:italic;display:flex;justify-content:flex-start;padding:30px;">In words: <strong style="font-style:normal;">@Model.inwords</strong></p>
            </div>

        </div>
        <hr />
        <div class="row"style="height:100px;">

        </div>

    </div>
   
    </div>


