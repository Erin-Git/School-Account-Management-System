<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - SchoolManagementSystem</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <environment include="Development">

        <!-- UIkit CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.5/css/uikit.min.css" />

        <!-- UIkit JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.5/js/uikit.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.1.5/js/uikit-icons.min.js"></script>



        <link rel="stylesheet" href="~/AdminLayout/bower_components/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/AdminLayout/bower_components/font-awesome/css/font-awesome.css">
        <link rel="stylesheet" href="~/AdminLayout/dist/css/AdminLTE.min.css">
        <link rel="stylesheet" href="~/AdminLayout/dist/css/skins/_all-skins.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">






        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">


    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/AdminLayout/bower_components/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        
        <link rel="stylesheet" href="~/AdminLayout/dist/css/AdminLTE.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/AdminLayout/bower_components/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/AdminLayout/dist/css/skins/_all-skins.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </environment>
</head>

<body class="hold-transition skin-blue sidebar-mini">


    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="#" class="logo" style="background-color:#1a2226">

                <span class="logo-lg"><b>AccountsManagement</b></span>


            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" style="background-color:#1a2226;">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/AdminLayout/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs">Alexander Pierce</span>
                            </a>
                            <ul class="dropdown-menu">

                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/AdminLayout/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

                                    <p>
                                        Alexander Pierce - Web Developer
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>

                        </li>

                        <!-- Control Sidebar Toggle Button -->

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/AdminLayout/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Alexander Pierce</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>

                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-home"></i> <span>Accounts Home</span>

                        </a>

                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-user"></i>
                            <span>Student's Fee</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>

                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Accounts" asp-action="SetFee" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Set Fee</a></li> @*done*@
                            <li><a asp-area="Accounts" asp-action="FeeList" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Fee List</a></li> @*done*@
                            <li><a asp-area="Accounts" asp-action="SetExtraFee" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Set Extra Fee</a></li>  @*done*@
                            <li><a asp-area="Accounts" asp-action="ExtraFeeList" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Extra Fee List</a></li> @*done*@ 
                            <li><a asp-area="Accounts" asp-action="EnterStdntInfo" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Fee Submission</a></li>
                            <li><a asp-area="Accounts" asp-action="Search" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Search</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-user"></i>
                            <span>Teacher's Salary</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Accounts" asp-action="SetSalary" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Set Salary</a></li>  @*done*@
                            <li><a asp-area="Accounts" asp-action="SalaryList" asp-controller="Accounts"><i class="fa fa-check"></i>&nbsp;Salary List</a></li>  @*done*@
                            <li><a asp-area="Accounts" asp-action="SalaryDetails" asp-controller="Accounts"><i class="fa fa-check"></i>Salary Details</a></li>   @*done*@
                            <li><a asp-area="Accounts" asp-action="EnterTcrInfo" asp-controller="Accounts"><i class="fa fa-check"></i>Give Salary</a></li> 
                            <li><a asp-area="Accounts" asp-action="SalaryResult" asp-controller="Accounts"><i class="fa fa-check"></i>Search</a></li> 

                        </ul>
                    </li>
                   
                </ul>
            </section>

        </aside>


        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Dashboard
                    <small>Control panel</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">


                @RenderBody()







            </section>







        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2019  <a href="#">Hello frnds</a>.</strong> All rights
            reserved.
        </footer>


        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->




    <environment include="Development">
        <script src="~/AdminLayout/bower_components/jquery/dist/jquery.min.js"></script>
        <script src="~/AdminLayout/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/AdminLayout/dist/js/adminlte.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <!-- Compiled and minified JavaScript -->
        @*Remote validate*@
        @*<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>*@

    </environment>
    <environment exclude="Development">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/AdminLayout/bower_components/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/AdminLayout/bower_components/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/AdminLayout/dist/js/adminlte.min.js" asp-append-version="true"></script>



    </environment>

    @RenderSection("Scripts", required: false)



</body>
</html>
